<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="large_font_size">36sp</style>

    <style name="font_family">
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="settings_heading_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/settings_heading_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="alert_heading_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/settings_heading_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="settings_subheading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="settings_subheading_option_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_text_option_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="weather_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/title_text_option_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="weather_detail_text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/weather_detail_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="SearchViewStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:drawableLeft">@drawable/ic_round_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="forecast_temp_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>

        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background Color-->
        <item name="android:background">@color/colorBackground</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/alert_title_style</item>
        <item name="materialAlertDialogBodyTextStyle">@style/alert_body_style</item>
        <!-- Text Color for buttons -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:spacing">@dimen/icon_dim</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="alert_title_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="alert_body_style" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
