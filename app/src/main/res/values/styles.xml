<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="large_font_size">36sp</style>

    <style name="font_family">
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="settings_heading_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/settings_heading_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="settings_subheading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="settings_subheading_option_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_text_option_size</item>
        <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="weather_detail_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    <item name="android:textSize">@dimen/title_text_option_size</item>
    <item name="android:fontFamily">@font/ubuntu_condensed_regular</item>
    <item name="layout_constrainedWidth">true</item>
</style>

    <style name="SearchViewStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="forecast_temp_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
